{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3 class="mt-4">Editar Categoria</h3>
<div class="card mt-4">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="post" id="editar" name="editar">
            <input type="hidden" name="id" value="{{categoria._id}}">
            <label for="nome">Nome: </label>
                <input type="text" id="nome" name="nome" placeholder="Nome da Categoria" class="form-control mt-2" value="{{categoria.nome}}">
            <label for="slug" class="mt-2">Slug:</label>
                <input type="text" id="slug" name="slug" placeholder="Slug da Categoria" class="form-control mt-2" value="{{categoria.slug}}">
        </form>
            <button type="submit" class="btn btn-success mt-4"form="editar">Editar Categoria</button>
            <a href="categorias"><button class="btn btn-danger mt-4">Cancelar</button></a>
    </div>
</div>