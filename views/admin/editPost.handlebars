{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3 class="mt-4">Editar Postagem</h3>
<div class="card mt-4">
    <div class="card-body">
        <form action="/admin/postagens/editPost" method="post" id="editar" name="editar">
            <input type="hidden" name="id" id="id" value="{{postagens._id}}">
            <label for="nome">Titulo: </label>
                <input type="text" name="titulo" id="titulo" placeholder="Titulo" class="form-control mt-2" value="{{postagens.titulo}}" required>
                <label for="Data" class="mt-2">Data: {{formatDate data}}</label><br>
                <label for="descricao" class="mt-2">Descrição: </label>
                <input type="text" id="descricao" name="descricao" placeholder="Resumo da Postagem" class="form-control mt-2" value="{{postagens.descricao}}" required>
            <label for="categorias" class="mt-2">Categoria: </label>
                <select name="categoria" class="form-select mt-2">
                    {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria cadastrada</option>
                    {{/each}}
                </select>
            <label for="slug" class="mt-2">Slug:</label>
                <input type="text" id="slug" name="slug" placeholder="Slug da Categoria" class="form-control mt-2" value="{{postagens.slug}}" required>
            <label for="conteudo" class="mt-2">Conteúdo: </label>
                <textarea id="conteudo" name="conteudo" placeholder="Faça Aqui o texto de sua postagem" cols="30" rows="10" class="form-control mt-2" required>{{postagens.conteudo}}</textarea>
        </form>
            <button type="submit" class="btn btn-success mt-4"form="editar">Editar Postagem</button>
            <a href="postagens"><button class="btn btn-danger mt-4">Cancelar</button></a>
    </div>
</div>



