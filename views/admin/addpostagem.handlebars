{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3 class="mt-4">Nova Postagem</h3>
<div class="card mt-4">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="post" id="publicar" name="publicar">
            <label for="categorias" class="mt-2">Categoria: </label>
                <select name="categoria" class="form-select mt-2">
                    {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria cadastrada</option>
                    {{/each}}
                </select>
            <label for="titulo"  class="mt-2">Título: </label>
                <input type="text" id="titulo" name="titulo" placeholder="Título da Postagem" class="form-control mt-2">
            <label for="slug" class="mt-2">Slug:</label>
                <input type="text" id="slug" name="slug" placeholder="Slug da Categoria" class="form-control mt-2">
                <label for="descricao" class="mt-2">Descrição: </label>
                <input type="text" id="descricao" name="descricao" placeholder="Resumo da Postagem" class="form-control mt-2">
            <label for="conteudo" class="mt-2">Conteúdo: </label>
                <textarea id="conteudo" name="conteudo" placeholder="Faça Aqui o texto de sua postagem" cols="30" rows="10" class="form-control mt-2"></textarea>
        </form>
            <button type="submit" class="btn btn-success mt-4" form="publicar">Publicar Postagem</button>
            <a href="/admin/postagens"><button class="btn btn-danger mt-4">Cancelar</button></a>
    </div>
</div>